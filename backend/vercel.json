{
  "version": 2,
  "builds": [
    {
      "src": "index.js", 
      "use": "@vercel/node", 
      "config": {
        "includeFiles": ["prisma/schema.prisma"], 
        "buildCommand": "npm run prisma:generate && prisma migrate deploy"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)", 
      "dest": "/index.js"
    }
  ]
}
